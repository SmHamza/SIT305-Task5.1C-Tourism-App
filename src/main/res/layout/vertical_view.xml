<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="200dp">

    <ImageView
        android:id="@+id/verticalImageView"
        android:layout_width="176dp"
        android:layout_height="176dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@+id/placeNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/placeNameTextView"
        android:layout_width="224dp"
        android:layout_height="46dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:text="Place Name"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/verticalImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/placeInformationTextView"
        android:layout_width="223dp"
        android:layout_height="114dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        android:text="Place information"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/verticalImageView"
        app:layout_constraintTop_toBottomOf="@+id/placeNameTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>