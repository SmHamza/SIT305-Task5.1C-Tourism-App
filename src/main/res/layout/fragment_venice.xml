<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".VeniceFragment">

    <ImageView
        android:id="@+id/veniceImage"
        android:layout_width="413dp"
        android:layout_height="304dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/venice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/veniceText"
        android:layout_width="109dp"
        android:layout_height="33dp"
        android:layout_marginStart="151dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="151dp"
        android:text="Venice"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/veniceImage" />

    <TextView
        android:id="@+id/veniceTextD"
        android:layout_width="302dp"
        android:layout_height="183dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="41dp"
        android:text="Venice is a city in northeastern Italy and the capital of the Veneto region. It is built on a group of 118 small islands that are separated by canals and linked by over 400 bridges."
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/veniceText" />
</androidx.constraintlayout.widget.ConstraintLayout>