<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".TokyoFragment">

    <ImageView
        android:id="@+id/tokyoImage"
        android:layout_width="416dp"
        android:layout_height="326dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/tokyo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tokyoText"
        android:layout_width="113dp"
        android:layout_height="31dp"
        android:layout_marginStart="149dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="149dp"
        android:text="Tokyo"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tokyoImage" />

    <TextView
        android:id="@+id/tokyoTextD"
        android:layout_width="293dp"
        android:layout_height="175dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="59dp"
        android:text="Tokyo is the de facto capital and most populous prefecture of Japan. Located at the head of Tokyo Bay the prefecture forms part of the Kantō region on the central Pacific coast of Japan's main island of Honshu"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tokyoText" />
</androidx.constraintlayout.widget.ConstraintLayout>